{% extends '::base.html.twig' %}

{% block stylesheets %}
{% stylesheets '../app/Resources/public/css/login.css' filter='cssrewrite' %}
  <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block body -%}
<div class="wrapper">
  <form action="#" method="post" class="form-signin col-lg-3 col-md-6 col-xs-12">
    <h2 class="form-signin-heading">RazorCab Login</h2>
    {% spaceless %}
      <input type="text" class="form-control" name="_username" required="" placeholder="Username" autofocus />
      <input type="password" class="form-control" name="_password" placeholder="Password" required=""/>
      <label class="checkbox">
        <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe" /> Remember me
      </label>
    {% endspaceless %}

    <button class="btn btn-lg btn-primary btn-block" type="submit">Login <span class="glyphicon glyphicon-chevron-right"></span></button>
  </form>
</div>
{% endblock %}
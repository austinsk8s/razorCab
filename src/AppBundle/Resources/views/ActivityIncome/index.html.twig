{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Activity Income</h1>

    <table class="table records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fares collected</th>
                <th>Tips collected</th>
                <th>Trips scheduled</th>
                <th>Trips not scheduled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('reports_activityincome_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.faresCollected }}</td>
                <td>{{ entity.tipesCollected }}</td>
                <td>{{ entity.tripsScheduled }}</td>
                <td>{{ entity.tripsNotScheduled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('reports_activityincome_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('reports_activityincome_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('reports_activityincome_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

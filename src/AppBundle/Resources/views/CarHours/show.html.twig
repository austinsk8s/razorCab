{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Car Hours</h1>

    <table class="table record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Hours idle</th>
                <td>{{ entity.hoursIdle }}</td>
            </tr>
            <tr>
                <th>Hours down servicing</th>
                <td>{{ entity.hoursDownServicing }}</td>
            </tr>
            <tr>
                <th>Hours run</th>
                <td>{{ entity.hoursRun }}</td>
            </tr>
            <tr>
                <th>Hours income</th>
                <td>{{ entity.hoursIncome }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reports_carhours') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reports_carhours_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
